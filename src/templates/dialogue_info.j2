<html>
<head>
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="UTF-8">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        body {
            /* Center the form on the page */
            margin: 0 auto;
            width: 500px;
            height: 100%;
        }
        .backLink {
            padding: 0em 1em;
            color: lightcoral;
        }
        .dialogueItem {
            padding: 0.8em 1em;
        }
        .speech {
            text-justify: auto;
        }
        @media only screen and (max-width: 505px) {
            body {
                width: 100%;
                border: 5px;
            }
        }
    </style>
</head>
<body>
<div class="backLink">
    <a href="/">Диалоги</a> / <a href="">{{ title }}</a>
</div>
<div class="dialogueItem">
    <h1>{{ title }}</h1>
    <div>{{ bibliography }}</div>
    </br>
    <div>{{ characters }}</div>
    </br>
    <div class="w3-bar">
        <a
          class="w3-button w3-left w3-light-blue w3-hover-blue"
          href="{{ read_href }}"
        >
            Читать
        </a>
</div>
</body>
</html>
